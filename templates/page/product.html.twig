{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="mb-4">{{ product.name }}</h1>

    <p>
        <strong>Code</strong>: #{{ product.metadata.code }}
    </p>

    <p>
        {{ product.summary }}
    </p>

    <hr>

    <p>
        {{ product.metadata.content }}
    </p>

    {% include "page/_info.html.twig" %}

    <hr>

    <div class="px-4">
    {% for comment in product.comments %}
        <div class="row mb-4">
            <h4 class="col-md-2">ID #{{ comment.id }}</h4>
            <p class="col-md-10">
                {{ comment.content }}
            </p>
        </div>
    {% endfor %}
    </div>
{% endblock %}